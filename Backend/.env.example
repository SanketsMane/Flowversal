# Server Configuration
NODE_ENV=development
PORT=3001
API_VERSION=v1

# MongoDB Configuration
# Local: mongodb://localhost:27017/flowversal
# Cloud: mongodb+srv://username:password@cluster.mongodb.net/flowversal
MONGODB_URI=mongodb://localhost:27017/flowversal
MONGODB_DB_NAME=flowversal

# Pinecone Configuration
# Get your API key from: https://app.pinecone.io/
PINECONE_API_KEY=your-pinecone-api-key
PINECONE_ENVIRONMENT=us-east-1
PINECONE_INDEX_NAME=flowversal-index

# Supabase Configuration
# Get these from your Supabase project settings
SUPABASE_URL=https://your-project.supabase.co
SUPABASE_ANON_KEY=your-anon-key
SUPABASE_SERVICE_ROLE_KEY=your-service-role-key

# Local AI Models (Ollama)
# Install Ollama from: https://ollama.ai/
# Pull models: ollama pull llama3:70b
OLLAMA_BASE_URL=http://localhost:11434
LOCAL_MODEL_ENABLED=true
LOCAL_MODEL_NAME=llama3:70b
LOCAL_MODEL_FALLBACK=true

# OpenRouter (Remote Models)
# Get API key from: https://openrouter.ai/
OPENROUTER_API_KEY=your-openrouter-api-key
OPENROUTER_BASE_URL=https://openrouter.ai/api/v1
REMOTE_MODELS_ENABLED=true
REMOTE_MODEL_GPT4=openai/gpt-4.1
REMOTE_MODEL_CLAUDE=anthropic/claude-3.5-sonnet
REMOTE_MODEL_GEMINI=google/gemini-2.0-flash-exp

# Model Selection Strategy
# Options: 'local', 'remote'
DEFAULT_MODEL_TYPE=local
# Fallback to remote models if local fails
FALLBACK_TO_REMOTE=true
# Options: 'smart', 'local-first', 'remote-first'
MODEL_SELECTION_STRATEGY=smart

# Inngest Configuration
# Get keys from: https://www.inngest.com/
INNGEST_EVENT_KEY=your-inngest-event-key
INNGEST_SIGNING_KEY=your-inngest-signing-key
INNGEST_BASE_URL=https://api.inngest.com

# JWT Secret
# Generate a secure random string for production
JWT_SECRET=your-secret-key-change-in-production
